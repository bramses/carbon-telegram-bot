{
  "name": "Carbon.now.sh Telegram Bot",
  "description": "Telegram Chatbot that generates carbon.now.sh images from source code",
  "repository": "https://github.com/bramses/carbon-telegram-bot",
  "keywords": [
    "node",
    "telegram",
    "code",
    "chatbot",
    "carbon",
    "syntax"
  ],
  "env": {
    "TELEGRAM_TOKEN": {
      "description": "Telegram Bot API token",
      "required": true
    },
    "STENOGRAPHY_TOKEN": {
      "description": "Steno Bot API token",
      "required": true
    },
    "MONGODB_URI": {
      "description": "Mongo connection",
      "required": true
    },
    "SERVER_EXTERNAL_HOST": {
      "description": "Your Heroku app URL, whith HTTPs",
      "value": "https://my-app.herokuapp.com",
      "required": true
    }
  }
}